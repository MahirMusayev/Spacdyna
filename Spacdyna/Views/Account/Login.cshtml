@using Spacdyna.Models
@model AppUser
@{
    Layout = null;
}


<div class="card-body">
    <a href="./index.html" class="text-nowrap logo-img text-center d-block py-3 w-100">
        <img src="../assets/images/logos/dark-logo.svg" width="180" alt="">
    </a>
    <p class="text-center">Your Social Campaigns</p>
    <form method="post">
        <div class="mb-3">
            <label asp-for=UserName class="form-label">Username</label>
            <input asp-for=UserName class="form-control">
        </div>
        <div class="mb-3">
            <label asp-for="PasswordHash" class="form-label">Username</label>
            <input type="password" asp-for="PasswordHash" class="form-control">
        </div>
        <button type="submit"  class="btn btn-primary w-100 py-8 fs-4 mb-4 rounded-2">Sign In</button>
        <div class="d-flex align-items-center justify-content-center">
            <a class="text-primary fw-bold ms-2" asp-action="Register">Create an account</a>
        </div>
    </form>
</div>